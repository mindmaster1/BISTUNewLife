page {
    height: 100%;
  }
  .biaobai {
    width: 100%;
    height: 100%;
  
  }
  .biaobai image {
    width: 100%;
    height: 100%;
    position:fixed;
  }
  
  .sayLove-page {
    position: fixed;
    top: 12%;
    height: 100%;
  }
  
  .chest {
    width: 750rpx;
    height: 1210rpx;
    margin: 0 auto;
    position: relative;
  }
  
  .heart {
    position: absolute;
    z-index: 2;
    background: linear-gradient(-90deg, #f50a45 0%, #d5093c 40%);
    animation: beat 0.7s ease 0s infinite normal;
  }
  
  .heart.center {
    background: linear-gradient(-45deg, #b80734 0%, #d5093c 40%);
  }
  
  .heart.top {
    z-index: 3;
  }
  
  .side {
    top: 200rpx;
    width: 440rpx;
    height: 440rpx;
    border-radius: 110px;
  }
  
  .center {
    width: 420rpx;
    height: 420rpx;
    bottom: 410rpx;
    left: 164rpx;
    transform: rotateZ(225deg);
    /*transform: rotate(45deg);*/
  }
  
  .right {
    right: 0px;
  }
  
  @keyframes beat {
    0% {
      transform: scale(1) rotate(225deg);
      box-shadow: 0 0 40px #d5093c;
    }
  
    50% {
      transform: scale(1.1) rotate(225deg);
      box-shadow: 0 0 70px #d5093c;
    }
  
    100% {
      transform: scale(1) rotate(225deg);
      box-shadow: 0 0 40px #d5093c;
    }
  }